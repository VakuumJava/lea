# Environment Configuration
DEBUG=false
LOG_LEVEL=info

# Database
DATABASE_URL=sqlite+aiosqlite:///./mcp_ui_aggregator.db

# Server (These will be overridden by hosting platform)
HOST=0.0.0.0
PORT=8000

# CORS Settings
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# API Keys (optional)
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# Production Settings
WORKERS=1
RELOAD=false

# MCP Server
MCP_SERVER_NAME=mcp-ui-aggregator
MCP_SERVER_VERSION=0.1.0

# Search configuration
ENABLE_VECTOR_SEARCH=false
VECTOR_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Data directories
DATA_DIR=./data
CACHE_DIR=./cache

# Documentation URLs
MUI_DOCS_URL=https://mui.com/material-ui/
SHADCN_DOCS_URL=https://ui.shadcn.com/docs/
CHAKRA_DOCS_URL=https://chakra-ui.com/docs/
ANTD_DOCS_URL=https://ant.design/components/
MANTINE_DOCS_URL=https://mantine.dev/core/